#!/bin/sh

set -e

#PKGOS-INCLUDE#

if [ "$1" = "configure" ] || [ "$1" = "reconfigure" ] ; then
	. /usr/share/debconf/confmodule

	pkgos_var_user_group aodh

	pkgos_write_new_conf aodh aodh.conf
	pkgos_write_new_conf aodh api_paste.ini
	pkgos_write_new_conf aodh policy.json
	pkgos_rabbit_write_conf /etc/aodh/aodh.conf oslo_messaging_rabbit aodh
	pkgos_write_admin_creds /etc/aodh/aodh.conf keystone_authtoken aodh
	#db_get ceilometer/configure_db
	#if [ "$RET" = "true" ]; then
	#	ceilometer-dbsync || true
	#fi
fi

#DEBHELPER#

exit 0
